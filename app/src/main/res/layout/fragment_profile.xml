<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@color/colorPrimary"
                app:civ_border_color="@color/colorDarkPrimary"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_elements_vertical_margin"
                android:fontFamily="@font/quicksand"
                android:text="@string/name"
                android:textColor="@color/primaryText"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/occupationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/info_occupation"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOccupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Lorem ipsum"
                android:textColor="@color/secondaryDarkText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/info_description"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc massa ante, porta non augue ut, gravida posuere odio. Aliquam ut lorem et lorem ullamcorper aliquet vel in sem. Curabitur ultricies mi neque, at vestibulum lorem gravida in. Nullam a quam sit amet nunc sollicitudin luctus et vitae nisl. Maecenas vel orci auctor, suscipit sapien tempor, pulvinar eros. Etiam at enim sem. Nulla pellentesque neque eu ligula semper, et ultricies arcu volutpat. Suspendisse tempor facilisis posuere volutpat. "
                android:textColor="@color/secondaryDarkText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/foundedInLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/info_founded_in"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFoundedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="2014"
                android:textColor="@color/secondaryDarkText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/benefitedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/info_benefited"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBenefited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="100 pessoas"
                android:textColor="@color/secondaryDarkText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/info_address"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Rua Alguma Coisa, XXX, Tal Bairro, Cidade Tal, Tal Estado"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                android:textColor="@color/secondaryDarkText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/websiteLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/quicksand"
                android:text="@string/info_website"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/quicksand"
                android:text="www.loremipsum.org"
                android:textAlignment="viewStart"
                android:textColor="@color/secondaryDarkText"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/profile_elements_vertical_margin">

            <Button
                android:id="@+id/btnEdit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_profile" />

            <Button
                android:id="@+id/btnLogout"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:text="@string/logout"
                android:textColor="@color/colorDarkPrimary" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>